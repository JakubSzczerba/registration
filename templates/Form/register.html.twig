{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.legalStatus) }}
    {{ form_row(form.fullName) }}
    {{ form_row(form.address) }}
    {{ form_row(form.city) }}
    {{ form_row(form.region) }}
    {{ form_row(form.mobile) }}
    {{ form_row(form.email) }}
    {{ form_row(form.pesel) }}
    {{ form_row(form.companyName) }}
    {{ form_row(form.nip) }}
    {{ form_end(form) }}

    <script>
        function toggleClock() {
                var input = document.getElementById('register_legalStatus');
                var fullName = document.getElementById('fullName');
                var pesel = document.getElementById('pesel');
                var companyName = document.getElementById('companyName');
                var nip = document.getElementById('nip');
                if (input.value === "customer") {
                    fullName.style.display = ''
                    pesel.style.display = ''
                    companyName.style.display = 'none'
                    nip.style.display = 'none'
                } else {
                    fullName.style.display = 'none'
                    pesel.style.display = 'none'
                    companyName.style.display = ''
                    nip.style.display = ''
                }
        }
    </script>
{% endblock %}
