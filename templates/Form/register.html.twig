{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.legalStatus) }}
    {{ form_row(form.fullName) }}
    {{ form_row(form.address) }}
    {{ form_row(form.city) }}
    {{ form_row(form.region) }}
    {{ form_row(form.mobile) }}
    {{ form_row(form.email) }}
    {{ form_row(form.pesel) }}
    {{ form_row(form.companyName) }}
    {{ form_row(form.nip) }}
    {{ form_end(form) }}

    <script>
        function showCustomer(str){
            document.getElementById('fullName').style.display = 'block';
            document.getElementById('pesel').style.display = 'block';
            document.getElementById('companyName').style.display = 'none';
            document.getElementById('nip').style.display = 'none';
        }
        function showCompany(sign){
            document.getElementById('fullName').style.display = 'none';
            document.getElementById('pesel').style.display = 'none';
            document.getElementById('companyName').style.display = 'block';
            document.getElementById('nip').style.display = 'block';
        }
    </script>
{% endblock %}